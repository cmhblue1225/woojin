{
  "name": "daejin-chatbot",
  "version": "1.0.0",
  "description": "대진대학교 RAG 기반 챗봇",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "embed": "node scripts/embed-documents.js",
    "check-embedding": "node scripts/check-embedding.js",
    "watch-embedding": "node scripts/check-embedding.js --watch",
    "embedding-logs": "node scripts/check-embedding.js --logs",
    "setup-db": "node scripts/setup-database.js",
    "update-timetable": "node scripts/partial-update.js --type=timetable",
    "update-announcement": "node scripts/partial-update.js --type=announcement",
    "update-website": "node scripts/process-crawled-data.js",
    "update-file": "node scripts/partial-update.js --file=",
    "crawl": "cd crawlingTest && python3 enhanced_crawler.py",
    "build": "cd client && npm run build",
    "start": "node server.js",
    "install-all": "npm install && cd client && npm install && cd ..",
    "postinstall": "cd client && npm install",
    "heroku-postbuild": "npm run build",
    "check-unlimited-progress": "node scripts/check-unlimited-progress.js",
    "watch-unlimited-progress": "node scripts/watch-unlimited-progress.js",
    "enhanced-unlimited-monitor": "node scripts/enhanced-unlimited-monitor.js",
    "integrate-unlimited": "node scripts/integrate-unlimited-crawling.js",
    "advanced-monitor": "node scripts/advanced-embedding-monitor.js",
    "ultra-monitor": "node scripts/ultra-embedding-monitor.js",
    "embedding-status": "node scripts/embedding-controller.js status",
    "pause-embedding": "node scripts/embedding-controller.js pause",
    "resume-embedding": "node scripts/embedding-controller.js resume",
    "stop-embedding": "node scripts/embedding-controller.js stop",
    "analyze-crawling": "node scripts/analyze-crawling-data.js",
    "prepare-turbo": "node scripts/prepare-turbo-embedding.js",
    "start-turbo-embedding": "node scripts/execute-turbo-embedding.js",
    "resume-turbo-embedding": "node scripts/execute-turbo-embedding.js --resume",
    "monitor-turbo": "node scripts/monitor-turbo-embedding.js",
    "monitor-turbo-fast": "node scripts/monitor-turbo-embedding.js --fast",
    "turbo-summary": "node scripts/monitor-turbo-embedding.js --summary"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@supabase/supabase-js": "^2.38.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "node-fetch": "^3.3.2",
    "openai": "^4.52.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "chatbot",
    "rag",
    "university",
    "korean"
  ],
  "author": "",
  "license": "MIT"
}
